<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <filter>
        <filter-name>encoding</filter-name>
        <filter-class>com.cheng.filter.encodingFilter</filter-class>
        <init-param>
            <param-name>enReq</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <param-name>enResp</param-name>
            <param-value>text/html;charset=utf-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>encoding</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
    <filter>
        <filter-name>staticFilter</filter-name>
        <filter-class>com.cheng.filter.staticFilter</filter-class>
        <init-param>
            <param-name>liveTimeP</param-name>
            <param-value>5</param-value>
        </init-param>
        <init-param>
            <param-name>liveTimeJC</param-name>
            <param-value>3</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>staticFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!--免登陆servlet,filter-->
    <servlet>
        <servlet-name>autoLogin</servlet-name>
        <servlet-class>com.cheng.login.AutoLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>autoLogin</servlet-name>
        <url-pattern>/login/auto</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>success</servlet-name>
        <servlet-class>com.cheng.login.SuccessServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>success</servlet-name>
        <url-pattern>/login/success</url-pattern>
    </servlet-mapping>    <servlet>
        <servlet-name>unSuccess</servlet-name>
        <servlet-class>com.cheng.login.UnSuccessServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>unSuccess</servlet-name>
        <url-pattern>/login/unSuccess</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>autoFilter</filter-name>
        <filter-class>com.cheng.login.AutoLoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>autoFilter</filter-name>
        <url-pattern>/login/*</url-pattern>
    </filter-mapping>

</web-app>